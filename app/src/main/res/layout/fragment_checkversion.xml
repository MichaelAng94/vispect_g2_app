<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/main_background"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="@dimen/y35"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="@dimen/y35"
        android:layout_marginBottom="@dimen/y35"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bleinfo_hardware_version"
            />

        <TextView
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:id="@+id/hardware_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/y35"
        android:layout_marginBottom="@dimen/y35"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bleinfo_software_system"
            />

        <TextView
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:id="@+id/software_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/y35"
        android:layout_marginBottom="@dimen/y35"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bleinfo_application_software"
            />

        <TextView
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:id="@+id/application_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/y35"
        android:layout_marginBottom="@dimen/y35"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bleinfo_obd_version"
            />

        <TextView
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:id="@+id/odb_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/re_last"
        android:layout_marginTop="@dimen/y35"
        android:layout_marginBottom="@dimen/y35"
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bleinfo_buzzer_version"
            />

        <TextView
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:id="@+id/buzzer_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </RelativeLayout>

    </LinearLayout>

</LinearLayout>