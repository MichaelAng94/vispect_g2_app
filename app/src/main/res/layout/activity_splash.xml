<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@mipmap/guideimage"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/y300"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x500">

        <ImageView
            android:layout_centerHorizontal="true"
            android:layout_width="@dimen/x500"
            android:layout_height="@dimen/x500"
            android:src="@mipmap/guideimageround"
            />

        <TextView
            android:textSize="@dimen/y100"
            android:textColor="@color/white"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Science &amp; Beauty"
            />

    </RelativeLayout>

    <TextView
        android:textSize="@dimen/y50"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/y50"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="G2 ADAS"
        />

</RelativeLayout>