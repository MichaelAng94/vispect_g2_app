<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x2"
    android:paddingRight="@dimen/x2" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y700"
        android:background="@mipmap/bg_volume"
        android:gravity="center"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y100"
                android:src="@mipmap/ico_volume_low" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/volume_low" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <SeekBar
                android:layout_width="@dimen/x700"
                android:layout_height="wrap_content" 
                android:progressDrawable="@mipmap/volume_seekbar"
                android:maxHeight="@dimen/y12"
                 android:minHeight="@dimen/y12"
                android:thumb="@mipmap/ico_volume_slider"
                android:indeterminate="false"
                android:layout_marginRight="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginBottom="@dimen/x50"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/y100"
                android:src="@mipmap/ico_volume_hight" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text="@string/volume_hight" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>