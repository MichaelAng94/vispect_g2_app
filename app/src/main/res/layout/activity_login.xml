<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_marginBottom="@dimen/y50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_by_email"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/y80"
            />

        <EditText
            android:maxLines="1"
            android:id="@+id/et_login_userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50"
            android:hint="@string/login_email"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:theme="@style/MyEditText" />

        <EditText
            android:maxLines="1"
            android:password="true"
            android:id="@+id/et_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50"
            android:layout_marginTop="@dimen/y80"
            android:hint="@string/login_password"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:theme="@style/MyEditText" />

        <TextView
            android:visibility="invisible"
            android:id="@+id/tv_login_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x30"
            android:layout_marginTop="@dimen/y50"
            android:text="@string/forget_password"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btn_sign"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y130"
            android:layout_marginLeft="@dimen/x50"
            android:layout_marginRight="@dimen/x50"
            android:layout_marginTop="@dimen/y80"
            android:background="@drawable/btn_login"
            android:text="@string/login"
            android:textColor="@color/background" />

    </LinearLayout>

    <TextView
        android:id="@+id/iv_register"
        android:layout_marginBottom="@dimen/y80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/register_"
        android:textColor="@color/white" />

</RelativeLayout>