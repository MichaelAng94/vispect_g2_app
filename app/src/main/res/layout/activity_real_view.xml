<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.vispect.android.vispect_g2_app.ui.widget.XuHCSurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.vispect.android.vispect_g2_app.ui.widget.DrawAdas
        android:id="@+id/drawAdas"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.vispect.android.vispect_g2_app.ui.widget.CustomView
        android:id="@+id/customView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/y120"
        android:layout_marginTop="@dimen/y150"
        android:textColor="@color/yellowfe"
        android:textSize="@dimen/x50" />

    <LinearLayout
        android:id="@+id/ly_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y150"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Calibrationing"
            android:textColor="@color/yellowfe"
            android:textSize="@dimen/x50" />

        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/yellowfe"
            android:textSize="@dimen/x50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:textColor="@color/yellowfe"
            android:textSize="@dimen/x50" />


    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="#99000000"
        android:paddingHorizontal="@dimen/x35">

        <ImageView
            android:id="@+id/img_back_main"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y90"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/ico_back" />

        <ImageView
            android:id="@+id/img_change"
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y90"
            android:layout_gravity="center_vertical|right"
            android:src="@mipmap/changecamera"
            android:tint="@color/white" />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_horizontal"
        android:layout_width="@dimen/y500"
        android:layout_height="@dimen/y8"
        android:layout_gravity="center"
        android:background="@color/red"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_vertical"
        android:layout_width="@dimen/x8"
        android:layout_height="@dimen/y300"
        android:layout_gravity="center"
        android:background="@color/red"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/blue_center"
        android:layout_width="@dimen/x500"
        android:layout_height="@dimen/y8"
        android:layout_gravity="center"
        android:background="#322a6ccc"
        android:visibility="invisible" />

</FrameLayout>
