<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/transparent"
    android:id="@+id/ll_main">

    <LinearLayout
        android:layout_width="@dimen/x800"
        android:layout_height="@dimen/y600"
        android:background="@mipmap/dialog_notconnect_bg"
        android:orientation="vertical"
        android:padding="@dimen/x30" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                 android:id="@+id/btn_doalog_connect_message"
                android:text="现在还未连接设备"
                android:textSize="@dimen/x48"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText
                android:id="@+id/edit_car_brand"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y110"
                android:layout_marginLeft="@dimen/x50"
                android:layout_marginRight="@dimen/x50"
                android:hint="@string/select_brand_title"
                android:background="@mipmap/btn_register"
                android:maxLines="1"
                android:textSize="@dimen/x48"
                android:textColor="@color/text_color_default"
                android:maxLength="24"/>
            <EditText
                android:id="@+id/edit_car_mode"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y110"
                android:layout_marginLeft="@dimen/x50"
                android:layout_marginRight="@dimen/x50"
                android:hint="@string/select_model_title"
                android:background="@mipmap/btn_register"
                android:maxLines="1"
                android:textSize="@dimen/x48"
                android:textColor="@color/text_color_default"
                android:maxLength="24"/>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/y30"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_doalog_connect_cancel"

                    android:layout_width="@dimen/x260"
                    android:layout_height="@dimen/y120"
                    android:background="@mipmap/dialog_notconnect_cancel"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20"
                    android:textSize="@dimen/x42"
                    android:text="取消" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btn_doalog_connect_positive"

                    android:layout_width="@dimen/x260"
                    android:layout_height="@dimen/y120"
                    android:background="@mipmap/btn_login"
                    android:paddingLeft="@dimen/x20"
                    android:paddingRight="@dimen/x20"
                    android:textSize="@dimen/x42"
                    android:text="连接"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>