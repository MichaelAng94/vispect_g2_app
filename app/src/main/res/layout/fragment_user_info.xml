<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hintColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="@dimen/x330"
            android:layout_height="@dimen/y330"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x100"
            android:scaleType="centerCrop"
            android:src="@drawable/ico_mine_avatar" />

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="@dimen/x80"
            android:layout_marginTop="@dimen/x30"
            android:text="User_Name"
            android:textColor="@color/white"
            android:textSize="@dimen/y55" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/ripple_bg2"
        android:paddingLeft="@dimen/x35">

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/x35"
            android:text="phone"
            android:textColor="@color/textColor"
            android:textSize="@dimen/y50" />

        <ImageView
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y90"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/phone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/x35"
            android:background="@color/light_gray" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:background="@drawable/ripple_bg2"
        android:paddingLeft="@dimen/x35">

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="@dimen/x35"
            android:text="email"
            android:textColor="@color/textColor"
            android:textSize="@dimen/y50" />
        <ImageView
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y90"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/email" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/y1"
            android:layout_gravity="bottom"
            android:layout_marginLeft="@dimen/x35"
            android:background="@color/light_gray" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fl_sex"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:background="@drawable/ripple_bg2"
        android:paddingHorizontal="@dimen/x35">

        <TextView
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="male"
            android:textColor="@color/textColor"
            android:textSize="@dimen/y50" />

        <ImageView
            android:layout_width="@dimen/x90"
            android:layout_height="@dimen/y90"
            android:layout_gravity="left|center_vertical"
            android:src="@drawable/sex" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/app_version"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:layout_marginTop="@dimen/y40"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="@dimen/x35">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:text="@string/app_version"
            android:textColor="@color/blackText"
            android:textSize="@dimen/y50" />

        <TextView
            android:id="@+id/version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:text="1.0.0"
            android:textColor="@color/textColor"
            android:textSize="@dimen/y50" />
    </FrameLayout>

    <TextView
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y160"
        android:layout_marginTop="@dimen/y40"
        android:background="@drawable/ripple_bg2"
        android:gravity="center"
        android:text="@string/logout"
        android:textColor="@color/blackText"
        android:textSize="@dimen/y50" />
</LinearLayout>
