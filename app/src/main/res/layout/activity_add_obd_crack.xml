<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal"
  >

    <include layout="@layout/include_title" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x40">

            <!--品牌-->
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/x30"
                android:layout_height="@dimen/y30"
                android:src="@mipmap/img_dot_bllue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/select_brand_title"/>
            <EditText
                android:id="@+id/edt_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/textfield_focused_holo_light"
                android:layout_marginLeft="@dimen/x10"/>

        </LinearLayout>

           <!-- 型号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/y30"
                    android:src="@mipmap/img_dot_bllue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select_model_title"/>
                <EditText
                    android:id="@+id/edt_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/textfield_focused_holo_light"
                    android:layout_marginLeft="@dimen/x10"/>

            </LinearLayout>


            <!--灯ID-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/y30"
                    android:src="@mipmap/img_dot_bllue"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/obd_debug_light_id"/>
                <EditText
                    android:id="@+id/edt_light_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/textfield_focused_holo_light"
                    android:layout_marginLeft="@dimen/x10"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x140"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/obd_debug_light_left"/>
                    <EditText
                        android:id="@+id/edt_light_left"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/textfield_focused_holo_light"
                        android:layout_marginLeft="@dimen/x10"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/obd_debug_light_right"/>
                    <EditText
                        android:id="@+id/edt_light_right"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/textfield_focused_holo_light"
                        android:layout_marginLeft="@dimen/x10"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x140"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/obd_debug_light_big"/>
                    <EditText
                        android:id="@+id/edt_light_big"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/textfield_focused_holo_light"
                        android:layout_marginLeft="@dimen/x10"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.5"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/obd_debug_light_driving"/>
                    <EditText
                        android:id="@+id/edt_light_driving"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/textfield_focused_holo_light"
                        android:layout_marginLeft="@dimen/x10"/>
                </LinearLayout>

            </LinearLayout>

            <!--雨刮id-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/y30"
                        android:src="@mipmap/img_dot_bllue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/obd_debug_wipper_id"/>
                    <EditText
                        android:id="@+id/edt_wipper_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/textfield_focused_holo_light"
                        android:layout_marginLeft="@dimen/x10"/>
                </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x140"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/obd_debug_wipper"/>
                <EditText
                    android:id="@+id/edt_wipper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/textfield_focused_holo_light"
                    android:layout_marginLeft="@dimen/x10"/>
            </LinearLayout>




            <!--倒车id-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/y30"
                        android:src="@mipmap/img_dot_bllue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/obd_debug_reverse_id"/>
                    <EditText
                        android:id="@+id/edt_reverse_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/textfield_focused_holo_light"
                        android:layout_marginLeft="@dimen/x10"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/x140">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/obd_debug_reverse"/>
                    <EditText
                        android:id="@+id/edt_reverse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/textfield_focused_holo_light"
                        android:layout_marginLeft="@dimen/x10"/>
                </LinearLayout>




            <!--刹车id-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="@dimen/x30"
                        android:layout_height="@dimen/y30"
                        android:src="@mipmap/img_dot_bllue"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/obd_debug_brake_id"/>
                    <EditText
                        android:id="@+id/edt_brake_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/textfield_focused_holo_light"
                        android:layout_marginLeft="@dimen/x10"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/x140">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/obd_debug_brake"/>
                    <EditText
                        android:id="@+id/edt_brake"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/textfield_focused_holo_light"
                        android:layout_marginLeft="@dimen/x10"/>
                </LinearLayout>



            <Button
                android:id="@+id/btn_save"
                android:layout_width="@dimen/x800"
                android:layout_height="@dimen/y180"
                android:layout_marginTop="@dimen/y30"
                android:background="@mipmap/btn_sign_out"
                android:layout_gravity="center_horizontal"
                android:text="@string/adjustments_save"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>





    

</LinearLayout>