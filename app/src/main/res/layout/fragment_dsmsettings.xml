<?xml version="1.0" encoding="utf-8"?>
<com.vispect.android.vispect_g2_app.ui.widget.MoScroller xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hintColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="@dimen/y120"
            android:background="@color/black"
            app:contentInsetStart="5dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_back_main"
                    android:layout_width="@dimen/x120"
                    android:layout_height="@dimen/y120"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/x30"
                    android:src="@mipmap/ico_back" />

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="DSM Setting"
                    android:textColor="@color/white"
                    android:textSize="@dimen/y45" />

                <Button
                    android:id="@+id/btn_save"
                    android:layout_width="@dimen/x110"
                    android:layout_height="@dimen/y70"
                    android:layout_gravity="center_vertical|right"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@drawable/outside"
                    android:text="@string/adjustments_save"
                    android:textColor="@color/white"
                    android:textSize="@dimen/y35" />

            </FrameLayout>

        </android.support.v7.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y40"
            android:background="@color/white"
            android:paddingBottom="@dimen/y40"
            android:paddingLeft="@dimen/x25"
            android:paddingTop="@dimen/y10"
            android:text="@string/dsmsettings_tips"
            android:textColor="@color/table_check"
            android:textSize="@dimen/y40" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:layout_marginTop="@dimen/y20"
                android:src="@drawable/dot"
                android:tint="@color/table_check" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/warning_interval"
                    android:textColor="@color/black"
                    android:textSize="@dimen/y50" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distracting"
                        android:textSize="@dimen/y45" />

                    <EditText
                        android:id="@+id/et_distracting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        android:textColor="@color/table_check"
                        android:textSize="@dimen/y40" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dangerous"
                        android:textSize="@dimen/y45" />

                    <EditText
                        android:id="@+id/et_dangerous"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        android:textColor="@color/table_check"
                        android:textSize="@dimen/y40" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone"
                        android:textSize="@dimen/y45" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        android:textColor="@color/table_check"
                        android:textSize="@dimen/y40" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/smoking"
                        android:textSize="@dimen/y45" />

                    <EditText
                        android:id="@+id/et_smoking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        android:textColor="@color/table_check"
                        android:textSize="@dimen/y40" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/looking"
                        android:textSize="@dimen/y45" />

                    <EditText
                        android:id="@+id/et_looking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        android:textColor="@color/table_check"
                        android:textSize="@dimen/y40" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yawning"
                        android:textSize="@dimen/y45" />

                    <EditText
                        android:id="@+id/et_yawning"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        android:textColor="@color/table_check"
                        android:textSize="@dimen/y40" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/face"
                        android:textSize="@dimen/y45" />

                    <EditText
                        android:id="@+id/et_face"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        android:textColor="@color/table_check"
                        android:textSize="@dimen/y40" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/camera_corverd"
                        android:textSize="@dimen/y45" />

                    <EditText
                        android:id="@+id/et_camera"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        android:textColor="@color/table_check"
                        android:textSize="@dimen/y40" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/y15">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/drinking"
                        android:textSize="@dimen/y45" />

                    <EditText
                        android:id="@+id/et_drinking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        android:textColor="@color/table_check"
                        android:textSize="@dimen/y40" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:layout_marginTop="@dimen/y20"
                android:src="@drawable/dot"
                android:tint="@color/table_check" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sensitivity_eye"
                    android:textColor="@color/black"
                    android:textSize="@dimen/y50" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/distracting"
                        android:textSize="@dimen/y45" />

                    <EditText
                        android:id="@+id/et_distracting_sen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        android:textColor="@color/table_check"
                        android:textSize="@dimen/y40" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[1~3]" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dangerous"
                        android:textSize="@dimen/y45" />

                    <EditText
                        android:id="@+id/et_dangerous_sen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        android:textColor="@color/table_check"
                        android:textSize="@dimen/y40" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[1~3]" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:layout_marginTop="@dimen/y20"
                android:src="@drawable/dot"
                android:tint="@color/table_check" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sensitivity_mouth"
                    android:textColor="@color/black"
                    android:textSize="@dimen/y50" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/yawning"
                        android:textSize="@dimen/y45" />

                    <EditText
                        android:id="@+id/et_yawning_sen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        android:textColor="@color/table_check"
                        android:textSize="@dimen/y40" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[1~3]" />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/y30"
            android:background="@color/white"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/y60"
                android:layout_marginTop="@dimen/y20"
                android:src="@drawable/dot"
                android:tint="@color/table_check" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sensitivity_looking"
                    android:textColor="@color/black"
                    android:textSize="@dimen/y50" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/looking"
                        android:textSize="@dimen/y45" />

                    <EditText
                        android:id="@+id/et_looking_sen"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="4"
                        android:textColor="@color/table_check"
                        android:textSize="@dimen/y40" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[1~3]" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</com.vispect.android.vispect_g2_app.ui.widget.MoScroller>