<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:minHeight="@dimen/y150"
        android:background="@drawable/ripple_bg"
        android:layout_margin="@dimen/y20"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/img_dot"
        android:src="@drawable/dot"
        android:layout_width="@dimen/y90"
        android:layout_height= "@dimen/y90" />

    <TextView
        android:layout_margin="@dimen/y25"
        android:textSize="@dimen/y40"
        android:textColor="@color/white"
        android:layout_toRightOf="@id/img_dot"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_choose_cammera"
        />

    </RelativeLayout>

</RelativeLayout>