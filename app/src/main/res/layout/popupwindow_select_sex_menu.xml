<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/x2"
    android:paddingRight="@dimen/x2">

    <LinearLayout
        android:id="@+id/ll_male"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:background="@mipmap/bg_updata_avatar_1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_male"
            android:layout_width="@dimen/y80"
            android:layout_height="@dimen/y80"
            android:src="@mipmap/ico_man_b_off"/>

        <TextView
            android:id="@+id/tv_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"
            android:gravity="center"
            android:textSize="@dimen/x48"
            android:textColor="@color/text_color_default"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y3"
        android:background="@color/text_color_default"
        android:gravity="center" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_female"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:background="@mipmap/bg_updata_avatar_2"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_female"
            android:layout_width="@dimen/y80"
            android:layout_height="@dimen/y80"
            android:src="@mipmap/ico_woman_b"/>
        <TextView
            android:id="@+id/tv_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:gravity="center"
            android:textColor="@color/text_color_calendar_number"
            android:textSize="@dimen/x48"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y3"
        android:background="@color/text_color_default"
        android:gravity="center" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_popuwindow_savetophone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:background="@mipmap/bg_updata_avatar_2"
        android:gravity="center" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/yes"
            android:textColor="@color/text_color_calendar_number"
            android:gravity="center"
            android:textSize="@dimen/x50" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y20"
        android:background="@mipmap/bg_setting_volume_out"
        android:gravity="center" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_popuwindow_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y150"
        android:background="@mipmap/bg_updata_avatar_last"
        android:gravity="center" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textColor="@color/text_color_calendar_number"
            android:gravity="center"
            android:textSize="@dimen/x50" />
    </LinearLayout>

</LinearLayout>