<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hintColor"
    >

    <LinearLayout
        android:layout_marginTop="@dimen/y30"
        android:id="@+id/disabled_view_foo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_marginTop="@dimen/y30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_gravity="center"
                android:src="@drawable/dot"
                android:tint="@color/table_check"
                android:layout_width="@dimen/y90"
                android:layout_height= "@dimen/y90" />

            <TextView
                android:textSize="@dimen/y50"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/side_cameras"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/y45"
            android:layout_marginRight="@dimen/y45"
            android:textSize="@dimen/y40"
            android:textColor="@color/table_check"
            android:text="@string/note_side_cameras"
            />

        <RelativeLayout
            android:layout_marginTop="@dimen/y30"
            android:layout_marginBottom="@dimen/y50"
            android:layout_marginLeft="@dimen/y90"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:textSize="@dimen/deiver_status_small_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_speed"
                />

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x40"
                android:layout_gravity="right"
                android:background="@drawable/solid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_start_speed"
                    android:layout_margin="@dimen/y10"
                    android:layout_width="@dimen/x55"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="@dimen/deiver_status_small_size"
                    />

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:src="@drawable/remix"
                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="@dimen/y45"
            android:layout_marginLeft="@dimen/y90"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:textSize="@dimen/deiver_status_small_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_speed"
                />

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x40"
                android:layout_gravity="right"
                android:background="@drawable/solid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/tv_end_speed"
                    android:layout_margin="@dimen/y10"
                 android:layout_width="@dimen/x55"
                    android:layout_height="wrap_content"
                    android:text="50"
                    android:textSize="@dimen/deiver_status_small_size"
                    />

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:src="@drawable/remix"
                    />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>