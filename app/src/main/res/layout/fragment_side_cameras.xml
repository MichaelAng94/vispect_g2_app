<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hintColor"
    android:clickable="true">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="@dimen/y120"
        android:background="@color/black"
        app:contentInsetStart="5dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_back_main"
                android:layout_width="@dimen/x120"
                android:layout_height="@dimen/y120"
                android:layout_gravity="center_vertical"
                android:padding="@dimen/x30"
                android:src="@mipmap/ico_back" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/set_side_camera"
                android:textColor="@color/white"
                android:textSize="@dimen/y45" />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="@dimen/x110"
                android:layout_height="@dimen/y70"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="@dimen/x20"
                android:background="@drawable/outside"
                android:text="@string/adjustments_save"
                android:textColor="@color/white"
                android:textSize="@dimen/y35" />

        </FrameLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/disabled_view_foo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y150"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/y30">

            <ImageView
                android:layout_width="@dimen/y90"
                android:layout_height="@dimen/y90"
                android:src="@drawable/dot"
                android:tint="@color/table_check" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y100"
                android:text="@string/side_cameras"
                android:textColor="@color/black"
                android:textSize="@dimen/y50" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/y45"
            android:text="@string/note_side_cameras"
            android:textColor="@color/table_check"
            android:textSize="@dimen/y40" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/y50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/start_speed"
                android:textColor="@color/textColor"
                android:textSize="@dimen/deiver_status_small_size" />

            <FrameLayout
                android:id="@+id/fl_start_speed"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y80"
                android:layout_gravity="right"
                android:background="@drawable/solid"
                android:paddingHorizontal="@dimen/x20">

                <TextView
                    android:id="@+id/tv_start_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="50"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/deiver_status_small_size" />

                <ImageView
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="center|right"
                    android:src="@drawable/remix" />

            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y50"
            android:layout_marginHorizontal="@dimen/y50">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/end_speed"
                android:textColor="@color/textColor"
                android:textSize="@dimen/deiver_status_small_size" />

            <FrameLayout
                android:id="@+id/fl_end_speed"
                android:layout_width="@dimen/x160"
                android:layout_height="@dimen/y80"
                android:layout_gravity="right"
                android:background="@drawable/solid"
                android:paddingHorizontal="@dimen/x20">

                <TextView
                    android:id="@+id/tv_end_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="50"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/deiver_status_small_size" />

                <ImageView
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:layout_gravity="center|right"
                    android:src="@drawable/remix" />

            </FrameLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>