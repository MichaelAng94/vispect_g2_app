<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x20">

        <com.vispect.android.vispect_g2_app.ui.widget.MoRelative
            android:id="@+id/menu_user_guide"
            android:layout_width="0dp"
            android:layout_height="@dimen/x450"
            android:layout_margin="@dimen/x20"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/img_user_guide"
                    android:layout_width="@dimen/x135"
                    android:layout_height="@dimen/y135"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/user_guide" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_user_guide"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/x20"
                    android:text="@string/user_guide"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x50" />

            </RelativeLayout>

        </com.vispect.android.vispect_g2_app.ui.widget.MoRelative>

        <com.vispect.android.vispect_g2_app.ui.widget.MoRelative
            android:id="@+id/menu_installation"
            android:layout_width="0dp"
            android:layout_height="@dimen/x450"
            android:layout_margin="@dimen/x20"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/img_installation"
                    android:layout_width="@dimen/x135"
                    android:layout_height="@dimen/y135"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/installation" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_installation"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/x20"
                    android:text="@string/installation"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x50" />

            </RelativeLayout>

        </com.vispect.android.vispect_g2_app.ui.widget.MoRelative>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/x20">

        <com.vispect.android.vispect_g2_app.ui.widget.MoRelative
            android:id="@+id/menu_settings"
            android:layout_width="0dp"
            android:layout_height="@dimen/x450"
            android:layout_marginHorizontal="@dimen/x20"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/img_setting"
                    android:layout_width="@dimen/x135"
                    android:layout_height="@dimen/y135"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/settings" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_setting"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/x20"
                    android:text="@string/settings"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x50" />

            </RelativeLayout>

        </com.vispect.android.vispect_g2_app.ui.widget.MoRelative>

        <com.vispect.android.vispect_g2_app.ui.widget.MoRelative
            android:id="@+id/menu_live"
            android:layout_width="0dp"
            android:layout_height="@dimen/x450"
            android:layout_marginHorizontal="@dimen/x20"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/img_live"
                    android:layout_width="@dimen/x115"
                    android:layout_height="@dimen/y115"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/live" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_live"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/x20"
                    android:text="@string/live"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x50" />

            </RelativeLayout>

        </com.vispect.android.vispect_g2_app.ui.widget.MoRelative>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x20">

        <com.vispect.android.vispect_g2_app.ui.widget.MoRelative
            android:id="@+id/menu_video"
            android:layout_width="0dp"
            android:layout_height="@dimen/x450"
            android:layout_margin="@dimen/x20"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:clickable="true">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/img_video"
                    android:layout_width="@dimen/x135"
                    android:layout_height="@dimen/y135"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/video_archil" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_video"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="@dimen/x20"
                    android:text="@string/video_archives"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x50" />

            </RelativeLayout>

        </com.vispect.android.vispect_g2_app.ui.widget.MoRelative>

        <com.vispect.android.vispect_g2_app.ui.widget.MoRelative
            android:layout_width="0dp"
            android:layout_height="@dimen/x450"
            android:layout_margin="@dimen/x20"
            android:layout_weight="1"
            android:background="@drawable/ripple_bg"
            android:clickable="true"
            android:visibility="invisible" />

    </LinearLayout>

</LinearLayout>